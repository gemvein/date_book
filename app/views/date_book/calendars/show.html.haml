- add_title :calendar.l
= date_book_scripts
- if can? :create, @calendar.events.new
  %p.float-right.margin-left= icon_link_to 'plus', :add_event.l, date_book.new_event_path, class: 'btn btn-success'
.calendar
- add_footer_javascript do
  :javascript
    $(function() {
      $('.calendar').fullCalendar({
          events: '#{date_book.events_path calendar_id: @calendar.slug, format: :json}',
          eventRender: calendarEventRender,
          header: calendarEventHeader,
      });
    });
