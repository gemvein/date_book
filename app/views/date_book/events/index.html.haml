= date_book_scripts
- @events.each do |event|
  .article.clearfix
    %h2
      = link_to event.name, date_book.event_path(event.slug)
    %p
      = truncate strip_tags(event.description), length: 500, separator: ' ', omission: '...' do
        = link_to(:read_more.l, date_book.event_path(event.slug))
    = event_next_occurrence_dates event
- if can? :create, DateBook::Event
  = link_to :create.l, new_event_path